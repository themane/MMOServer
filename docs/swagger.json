                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Attack"
                ],
                "summary": "Attack API",
                "parameters": [
                    {
                        "type": "string",
                        "description": "attacker username",
                        "name": "attacker",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "spy launch planet identifier",
                        "name": "from_planet_id",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "spy destination planet identifier",
                        "name": "to_planet_id",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "object",
                        "description": "attack ships details",
                        "name": "formation",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/models.MissionResponse"
                        }
                    }
                }
            }
        },
